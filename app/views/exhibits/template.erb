<% content_for :sidebar do %>
  <%= render partial: 'sidebar_search' %>

  <img src="<%= @exhibit.thumbnail_url %>"/>
  <br/><br/><%# TODO: CSS to establish spacing. %>
  
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Author</h3>
    </div>
    <div class="panel-body">
      <%= @exhibit.author_html.html_safe %>
    </div>
  </div>
  
  <% if !@exhibit.children.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Sub-exhibits</h3>
      </div>
      <div class="panel-body">
        <% @exhibit.children.each do |child| %>
          <p><a href="/exhibits/<%= child.path %>"><%= child.name %></a></p>
        <% end %>
      </div>
    </div>
  <% end %>
  
    <%= render partial: 'shared/sidebar_nav', 
               locals: { 
                title: 'Links',
                links: @exhibit.links
              } %>
    
<% end %>
    
<%= render partial: 'shared/title_sidebar_main', 
           locals: {
             sidebar: yield(:sidebar),
             main: @exhibit.body_html.html_safe
           } %>
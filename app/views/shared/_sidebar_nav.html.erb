<%
  links ||= [
    ['About the AAPB', '/about-the-american-archive'],
    ['Vision and Mission', '/about-the-american-archive/vision-and-mission'],
    ['On Location Research', '/on-location'],
    ['History', '/about-the-american-archive/history'],
    ['Exhibits', '/exhibits'],
    ['Special Collections', '/special_collections'],
    ['Projects', '/about-the-american-archive/projects'],
    ['Funding', '/about-the-american-archive/funding'],
    ['Executive Advisory Council', '/about-the-american-archive/executive-advisory-council'],
    ['Acknowledgments', '/about-the-american-archive/acknowledgments'],
    ['FAQ', '/faq'],
    ["What's New", '/about-the-american-archive/whats-new', [['Events', '/about-the-american-archive/whats-new/events'], ['Funding Opportunities', '/about-the-american-archive/whats-new/funding-opportunities']]],
    ['Newsletter', '/about-the-american-archive/newsletter'],
    ['Contact Us', '/contact-us']
  ]
%>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-column">
        <span class="sr-only">Toggle navigation</span>
        <!-- Expando button for narrow views -->
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="nav-column">
      <ul class="nav navbar-nav">
        <% links.each do |name,link,subs=nil| %>
          <li>
            <%= link ? link_to(name, link, class: current_page(link)) : content_tag('a', name) %>
            <%# <a> in either case for consistent style. %>
          </li>
          <% if subs %><%# This could be recursive... %>
            <ul>
              <% subs.each do |name,link| %>
                <li>&bull; <%= link_to(name, link) %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if @show_transcript %>
<div class="col-sm-12 col-md-6 transcript-div transcript-view-<%= @transcript_open ? 'show' : 'hidden' %>">
  <dl class="panel transcript-panel">
    <div class="transcript-panel-heading">
      <dt class="dt-left">Transcript</dt>
      <div class="input-group input-group-sm transcript-search show-transcript-search" role="search">
          <input type="search" placeholder="Search..."/>
          <button data-search="next" class="transcript-search-btn"><span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></button>
          <button data-search="prev" class="transcript-search-btn"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span></button>
          <button data-search="clear" class="transcript-search-btn">âœ–</button>
      </div>
      <div class="transcript-slide show-transcript" style="cursor: pointer;"><%= @transcript_open ? 'Hide' : 'Show' %>
        <span class="transcript-circle"><%= @transcript_open ? '-' : '+' %></span>
      </div>
    </div>
  </dl>
  <div id="transcript" class="transcript-frame transcript-div transcript-view-<%= @transcript_open ? 'show' : 'hidden' %>">
    <div class="transcript-content">
      <%= raw @transcript_html %>
    </div>
  </div>

  <div id="transcript-message" class="">
    <div class="transcript-content">
      <%= @transcript_message %>
    </div>
  </div>
</div>
<% end %>

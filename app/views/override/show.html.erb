<% content_for :sidebar do %>
  <%= render 'shared/sidebar_search' %>
  <%= render partial: 'shared/sidebar_nav', 
             locals: { title: @override.title } %>
<% end %>


<% content_for :override_main do %>
  <div class="override-main">
    <%= @override.body_html.html_safe %>
  </div>
<% end %>

<%= render partial: 'shared/title_sidebar_main', 
           locals: {
             sidebar: yield(:sidebar),
             main: yield(:override_main)
           } %>
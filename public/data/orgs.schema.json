{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://americanarchive.org/public/data/orgs.schema.json",
  "title": "AAPB Organizations Schema",
  "description": "A schema representing organizations in AAPB",
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "properties": {
        "About": {
          "type": "string"
        },
        "City": {
          "type": "string"
        },
        "location": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "Logo": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "Productions": {
          "type": "string"
        },
        "Short name": {
          "type": "string"
        },
        "State": {
          "type": "string"
        },
        "Url": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri"
              },
              "minItems": 1
            }
          ]
        },
      "required": ["Name", "Short name", "State", "City", "About", "location"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
